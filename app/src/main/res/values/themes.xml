<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Netflix" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primeira</item>
        <item name="colorPrimaryVariant">@color/Segunda</item>
        <item name="colorOnPrimary">@color/Terceira</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="Theme.Netflix.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Netflix.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Netflix.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>